{
  "name": "dm-this",
  "version": "0.1.0",
  "description": "AI-powered D&D adventure gaming experience",
  "main": "dist/server/index.js",
  "scripts": {
    "dev": "nodemon --watch src/server --watch src/services --exec 'npm run build && npm start'",
    "build:client": "tsc && vite build",
    "build:server": "tsc -p tsconfig.server.json",
    "build": "npm run build:client && npm run build:server",
    "start": "node dist/server/index.js",
    "pdf-rag": "ts-node --project src/utils/rag/tsconfig.json src/utils/rag/index.ts",
    "pdf-rag:example": "ts-node --project src/utils/rag/tsconfig.json src/utils/rag/example.ts"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "@langchain/anthropic": "^0.3.15",
    "@langchain/community": "^0.3.36",
    "@langchain/core": "^0.3.42",
    "commander": "^13.1.0",
    "dotenv": "^16.4.7",
    "express": "^4.18.2",
    "hnswlib-node": "^3.0.0",
    "langchain": "^0.3.19",
    "pdfjs-dist": "^3.11.174",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "nodemon": "^3.1.9",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.10"
  }
}
